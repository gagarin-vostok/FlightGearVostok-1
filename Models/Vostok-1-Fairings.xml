<PropertyList>

<!-- Fairings -->

	<path>Vostok-1-Fairings.ac</path>

	<offsets>
		<x-m>0.0</x-m>
		<y-m>0.0</y-m>
		<z-m>0.0</z-m>
		<pitch-deg>0</pitch-deg>
	</offsets>

	<enable-hot type="bool">false</enable-hot>

	<animation>
		<type>select</type>
		<condition>
			<equals>
				<property>fdm/jsbsim/stages/unit[1]/active</property>
				<value>true</value>	
			</equals>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<property>fdm/jsbsim/stages/unit[1]/show-translate</property>
		<factor>1.0</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1.0</z>
		</axis>
	</animation>

</PropertyList>
