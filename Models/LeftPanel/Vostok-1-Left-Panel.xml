<PropertyList>

<!-- Left Panel -->

	<path>Vostok-1-Left-Panel.ac</path>

	<offsets>
		<x-m>0.0</x-m>
		<y-m>0.0</y-m>
		<z-m>0.0</z-m>
		<pitch-deg>0</pitch-deg>
	</offsets>

	<enable-hot type="bool">false</enable-hot>

	<animation>
		<type>select</type>
		<condition>
			<equals>
				<property>sim/current-view/internal</property>
				<value>true</value>
			</equals>
		</condition>
	</animation>

	<!-- Down indicator light -->

	<animation>
		<type>material</type>
		<object-name>LP_DLPanel</object-name>
		<object-name>LP_DLGlass</object-name>
		<emission>
			<factor-prop>fdm/jsbsim/systems/orientationpanel/down-light</factor-prop>
			<red-prop>fdm/jsbsim/systems/light/panel-yellow/red</red-prop>
			<green-prop>fdm/jsbsim/systems/light/panel-yellow/green</green-prop>
			<blue-prop>fdm/jsbsim/systems/light/panel-yellow/blue</blue-prop>
		</emission>
	</animation>

