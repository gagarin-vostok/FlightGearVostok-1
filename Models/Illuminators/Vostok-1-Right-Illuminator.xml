			<z>-1</z>
		</axis>
	</animation>

	<!-- Handle -->

	<animation>
		<type>rotate</type>
		<object-name>I_Handle</object-name>
		<object-name>I_HAxle</object-name>
		<property>fdm/jsbsim/systems/rightilluminator/cover-pos</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>0.0</dep></entry>
			<entry><ind>1.0</ind><dep>90.0</dep></entry>
		</interpolation>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>I_Handle</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>nasal</command>
				<script>Vostok1.bitswap("fdm/jsbsim/systems/rightilluminator/cover-input")</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>nasal</command>
				<script>Vostok1.bitswap("fdm/jsbsim/systems/rightilluminator/cover-input")</script>
			</binding>
		</action>
	</animation>

	<enable-hot type="bool">false</enable-hot>

</PropertyList>
