		<object-name>I_SEight</object-name>
		<object-name>I_SSliderFour</object-name>
		<property>fdm/jsbsim/systems/rightilluminator/petal-shift-eight</property>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- Cover angles -->

	<animation>
		<type>rotate</type>
		<object-name>I_SOne</object-name>
		<property>fdm/jsbsim/systems/rightilluminator/petal-angle</property>
		<center>
			<x-m>0.093905</x-m>
			<y-m>-0.098461</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>I_STwo</object-name>
		<property>fdm/jsbsim/systems/rightilluminator/petal-angle</property>
		<center>
			<x-m>0.093905</x-m>
			<y-m>-0.049328</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>I_SThree</object-name>
		<property>fdm/jsbsim/systems/rightilluminator/petal-angle</property>
		<center>
