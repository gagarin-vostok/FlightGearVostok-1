	<animation>
		<type>rotate</type>
		<object-name>I_SFive</object-name>
		<property>fdm/jsbsim/systems/rightilluminator/petal-angle</property>
		<center>
			<x-m>0.093905</x-m>
			<y-m>0.000131</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>I_SSix</object-name>
		<property>fdm/jsbsim/systems/rightilluminator/petal-angle</property>
		<center>
			<x-m>0.093905</x-m>
			<y-m>0.049322</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
